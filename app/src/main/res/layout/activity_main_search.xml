<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Task5.MainActivitySearch">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <!-- Search Bar -->
        <include
            android:id="@+id/search_searchBar"
            layout="@layout/search_searchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Filter Bar -->
        <include
            android:id="@+id/filterBar"
            layout="@layout/filter_bar_searchtab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Map View -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/map_reader" />

        <!-- List View (hidden by default) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNavContainer"
        layout="@layout/component_home_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
