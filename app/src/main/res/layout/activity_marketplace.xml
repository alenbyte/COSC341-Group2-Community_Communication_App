<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MarketplaceActivity">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavContainer"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <!-- Search Bar Component -->
        <include
            android:id="@+id/searchBar"
            layout="@layout/component_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Filter Bar Component -->
        <include
            android:id="@+id/filterBar"
            layout="@layout/component_filter_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Listings Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!-- Bottom Navigation Component -->
    <include
        android:id="@+id/bottomNavContainer"
        layout="@layout/component_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!-- Floating Post Button (move it here, NOT inside component_bottom_navigation) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/post"
        app:tint="@color/white"
        app:backgroundTint="@color/primary"
        app:elevation="6dp" />

</RelativeLayout>