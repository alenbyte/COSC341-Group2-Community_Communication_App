<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".COSC341Task1.community_report_finish">

    <TextView
        android:id="@+id/thankYouTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Thank You For Your Report"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/thankYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thankYouTitle"
        android:layout_marginTop="24dp"
        android:text="We have received your report and will investigate the issue. We take community safety seriously and appreciate you helping us maintain a positive environment."
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2" />

    <TextView
        android:id="@+id/nextStepsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thankYouMessage"
        android:layout_marginTop="40dp"
        android:text="Further Steps You Can Take"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nextStepsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextStepsTitle"
        android:layout_marginTop="16dp"
        android:text="If you feel unsafe or need immediate assistance, you can also block the user or leave the community. Your safety is our top priority."
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.2" />

    <Button
        android:id="@+id/finishReportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:text="Finish" />

</RelativeLayout>
