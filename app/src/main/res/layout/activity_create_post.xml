<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/createPostCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/createPostCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Top bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iconProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile_icon" />

                <!-- Audience (Friends / Public) -->
                <ImageView
                    android:id="@+id/audienceSelector"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/audience_pic"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Create Post"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_weight="1" />

                <!-- Notification bell -->
                <ImageView
                    android:id="@+id/iconBell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/bell_icon" />

                <!-- Close (X) -->
                <ImageView
                    android:id="@+id/iconClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close" />
            </LinearLayout>
            <EditText
                android:id="@+id/inputUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Your name" />

            <!-- Post text box -->
            <EditText
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:hint="Share with your community..."
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent" />

            <!-- Icons row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">


            <ImageView
                    android:id="@+id/iconAttach"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/attach_icon"
                    android:layout_gravity="start" />

                <ImageView
                    android:id="@+id/iconTextStyle"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/text_icon" />

                <FrameLayout
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp">

                    <!-- Tag icon (left) -->
                    <ImageView
                        android:id="@+id/iconTag"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|start"
                        android:src="@drawable/tag_icon" />

                    <!-- Dropdown arrow (more to the right) -->
                    <ImageView
                        android:id="@+id/iconTagDropdown"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:src="@drawable/arrow_drop_down_icon" />

                </FrameLayout>



                <ImageView
                    android:id="@+id/iconEmoji"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/emoji_icon" />

                <ImageView
                    android:id="@+id/iconMore"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_more" />
            </LinearLayout>

            <!-- Tag dropdown image (hidden by default) -->
            <ImageView
                android:id="@+id/tagMenu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:layout_marginEnd="24dp"
                android:src="@drawable/tag_drop_pic"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone" />


            <!-- Attach dropdown image (hidden by default) -->
            <ImageView
                android:id="@+id/attachMenu"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:layout_marginEnd="120dp"
                android:src="@drawable/attach_drop_pic"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone" />


            <!-- More dropdown menu (initially hidden) -->
            <LinearLayout
                android:id="@+id/moreMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/filter_button_background"
                android:padding="8dp"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disable comments" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Disable likes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Disable sharing" />
        </LinearLayout>


        <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Post" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
